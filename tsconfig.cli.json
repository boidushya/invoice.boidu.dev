{
  "compilerOptions": {
    "outDir": "./dist-cli",
    "rootDir": "./cli",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strict": false,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "include": ["cli/**/*"],
  "exclude": ["node_modules", "dist", "src", "tests"]
}