{
  "name": "invoice.boidu.dev",
  "version": "1.0.12",
  "description": "Cloudflare-hosted Invoice API with Hono and TypeScript",
  "main": "src/index.ts",
  "bin": {
    "invoice": "./dist-cli/index.js"
  },
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "test": "vitest run",
    "build": "tsc",
    "wrangler": "wrangler",
		"typecheck": "tsc --noEmit",
    "build:cli": "esbuild cli/index.ts --bundle --platform=node --target=node18 --outfile=dist-cli/index.js --minify --format=cjs --external:fsevents --tsconfig=tsconfig.cli.json",
		"typecheck:cli": "tsc --noEmit --project tsconfig.cli.json"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.4.0",
    "@fontsource/geist-mono": "^5.0.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "conf": "^11.0.2",
    "hono": "^4.0.0",
    "inquirer": "^9.2.0",
    "ora": "^6.3.1",
    "pdf-lib": "^1.17.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.0",
    "@cloudflare/workers-types": "^4.20231218.0",
    "@pdf-lib/fontkit": "^1.1.1",
    "@types/inquirer": "^9.0.0",
    "@types/node": "^20.10.0",
    "@vercel/ncc": "^0.38.3",
    "esbuild": "^0.25.9",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "wrangler": "^3.19.0"
  },
  "engines": {
    "node": ">=18"
  }
}
